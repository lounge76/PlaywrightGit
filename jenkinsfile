pipeline {
   agent { any { image 'mcr.microsoft.com/playwright:v1.38.0-jammy' } }
   stages {
      stage('Add dependency') {
      steps {
            bat '''
            npm i -D @playwright/test
            '''
            echo "Running ${env.JOB_NAME} ${env.BUILD_URL} ${env.BUILD_NUMBER} ${env.STAGE_NAME}${env.GIT_BRANCH}"
            //echo "Running ${env.JOB_NAME} ${env.BUILD_URL} ${env.BUILD_NUMBER} ${env.STAGE_NAME} ${responder} ${env.GIT_BRANCH}"
            script {
              statusComment = "${env.JOB_NAME} #${env.BUILD_NUMBER} started."
              slackSend color: '#0000ff', message: statusComment
            }
      }
      
    }
    stage('Install Playwright and browsers') {
      steps {
        bat '''
          npx playwright install
        '''

      }
    }
    stage('Run Playwright tests') {
      steps {
        bat '''
          npx playwright test 
        '''
      }
    }
  }
}