pipeline {
   agent { any { image 'mcr.microsoft.com/playwright:v1.38.0-jammy' } }
   stages {
      stage('Add dependency') {
      steps {
        bat '''
          npm i -D @playwright/test
        '''
      }
    }
    stage('Install Playwright and browsers') {
      steps {
        bat '''
          npx playwright install
        '''
      }
    }
    stage('Run Playwright tests') {
      steps {
        bat '''
          npx playwright test 
        '''
      }
    }
  }
 post {
    success {
      slackSend color: '#36a64f', message: "Deployment of myapp to production succeeded!"
    }
    failure {
      slackSend color: '#ff0000', message: "Deployment of myapp to production failed!"
    }
  }
}