pipeline {
  agent { 
    docker { 
      image 'mcr.microsoft.com/playwright:v1.38.0'
    } 
  }
  stages {
    stage('install playwright') {
      steps {
        sh '''
          npm i -D @playwright/test
          npx playwright install
        '''
      }
    }
    stage('test') {
      steps {
        sh '''
          npx playwright test jenkins-homepage.spec.ts
        '''
      }
    }
  }
}