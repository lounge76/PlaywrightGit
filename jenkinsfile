pipeline {
   agent { any { image 'mcr.microsoft.com/playwright:v1.38.0-jammy' } }
   stages {
      stage('Add dependency') {
      steps {
            bat '''
            npm i -D @playwright/test
            '''
            echo "${getBuildUser()}"
            //echo "Running ${env.JOB_NAME} ${env.BUILD_URL} ${env.BUILD_NUMBER} ${env.STAGE_NAME} ${responder} ${env.GIT_BRANCH}"
            script {
              statusComment = "${env.JOB_NAME} - #${env.BUILD_NUMBER} started by ${getBuildUser()}"
              slackSend color: '#0000ff', message: statusComment
            }
      }
      
    }
    stage('Install Playwright and browsers') {
      steps {
        bat '''
          npx playwright install
        '''

      }
    }
    stage('Run Playwright tests') {
      steps {
        bat '''
          npx playwright test 
        '''
      }
    }
  }

  post {
        success {
            script {
                statusComment = "${env.JOB_NAME} - #${env.BUILD_NUMBER} completed succesfully! :tada:"
                slackSend color: 'good', message: statusComment
            }
        }
        failure {
            script {
                statusComment = getTestResultsMessage()
                slackSend color: 'danger', message: statusComment
            }
        }
        aborted {
            script {
                statusComment = "${env.JOB_NAME} - #${env.BUILD_NUMBER} was aborted by ${getBuildUser()}."
                slackSend color: 'danger', message: statusComment
            }
        }
    }

}
String getTestResultsMessage() {
    AbstractTestResultAction testResultAction = currentBuild.rawBuild.getAction(AbstractTestResultAction.class)
    if (testResultAction != null) {
        def total = testResultAction.totalCount
        def failed = testResultAction.failCount
        def skipped = testResultAction.skipCount
        return "${env.JOB_NAME} - #${env.BUILD_NUMBER}> had test failures for ${env.GIT_BRANCH}.\n  Total: ${total}, Failed: ${failed}, Skipped: ${skipped}"
    } else {
        return "${env.JOB_NAME} - #${env.BUILD_NUMBER}> failed for ${env.GIT_BRANCH}"
    }
}

String getBuildUser() {
    return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
}